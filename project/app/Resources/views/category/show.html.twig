{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h1 class="display-4">Просмотр категории</h1>
        </div>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Название категории</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
            </tr>
            </tbody>
        </table>
        <a class="btn btn-success btn-lg" href="{{ path('category_edit', { 'id': category.id }) }}">Изменить</a>
        <a class="btn btn-secondary btn-lg" href="{{ path('category_index') }}">Вернуться к списку</a>
    </div>
{% endblock %}
